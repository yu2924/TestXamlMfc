<?xml version="1.0" encoding="utf-8"?>
<StackPanel
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Orientation="Vertical"
  Padding="8">
  <TextBlock Text="Hello World from Xaml Islands!" FontFamily="Comic Sans MS" FontSize="32" />
  <Button Content="Button" />
  <CheckBox Content="CheckBox" />
  <Slider Header="Slider" HorizontalAlignment="Left" Width="200"
          Minimum="500" Maximum="1000" StepFrequency="10" SmallChange="10" Value="800" />
  <ComboBox Header="ComboBox" PlaceholderText="Pick a color" Width="200">
    <x:String>Red</x:String>
    <x:String>Green</x:String>
    <x:String>Blue</x:String>
  </ComboBox>
</StackPanel>
